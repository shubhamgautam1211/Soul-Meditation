<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center|left"
    android:orientation="vertical">


    <TextView
        android:id="@+id/gmtTitle"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|top"
        android:soundEffectsEnabled="false"
        android:text="SOUL MEDITATION"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioBeatType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:soundEffectsEnabled="false">

            <RadioButton
                android:id="@+id/radioBinaural"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:soundEffectsEnabled="false"
                android:text="@string/binaural_radio" />

            <RadioButton
                android:id="@+id/radioIsochronic"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:soundEffectsEnabled="false"
                android:text="@string/isochronic_radio" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etCarrierFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/carrier_hint"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:soundEffectsEnabled="false"
                    android:text="200"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/carrier_label" />

                <TextView
                    android:id="@+id/tvCarrierFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/not_applicable" />
            </LinearLayout>
        </RelativeLayout>

        <ToggleButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:gravity="center"
            android:onClick="clickPlay"
            android:soundEffectsEnabled="false"
            android:text=""
            android:textOff=""
            android:textOn="" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etBeatFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/beat_hint"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:soundEffectsEnabled="false"
                    android:text="8"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/beat_label" />

                <TextView
                    android:id="@+id/tvBeatFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/not_applicable" />
            </LinearLayout>
        </RelativeLayout>
     </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button229"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="creativity" />

            <Button
                android:id="@+id/button228"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sleep" />

            <Button
                android:id="@+id/button227"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="astral" />

            <Button
                android:id="@+id/button226"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="alpha " />

            <Button
                android:id="@+id/button225"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="intelligence" />

            <Button
                android:id="@+id/button224"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="theta " />

            <Button
                android:id="@+id/button223"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="deep sleep" />

            <Button
                android:id="@+id/button222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delta" />

            <Button
                android:id="@+id/button221"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="focus" />

            <Button
                android:id="@+id/button220"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cognitive" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="relaxation" />

            <Button
                android:id="@+id/button122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="chanting" />

            <Button
                android:id="@+id/button123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="euphoria" />
            <Button
                android:id="@+id/button124"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="euphoria" />

            <Button
                android:id="@+id/button125"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="deep sleep " />

            <Button
                android:id="@+id/button126"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lucid dreaming" />

            <Button
                android:id="@+id/button128"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="beta" />

            <Button
                android:id="@+id/button127"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gamma" />

            <Button
                android:id="@+id/button128"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="concentration" />

            <Button
                android:id="@+id/button129"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="anxiety" />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>
